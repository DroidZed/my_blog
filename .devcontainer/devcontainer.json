// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "Blog Dev Env",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerComposeFile": "compose.yml",
	"service": "blog_dev_service",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"customizations": {
		"vscode": {
			"extensions": [
				"formulahendry.auto-rename-tag",
				"divola.ayu-dark-lighter",
				"alefragnani.Bookmarks",
				"icrawl.discord-vscode",
				"usernamehw.errorlens",
				"PKief.material-icon-theme",
				"equinusocio.vsc-material-theme-icons",
				"ElAnandKumar.el-vsc-product-icon-theme",
				"csstools.postcss",
				"dbaeumer.vscode-eslint",
				"biomejs.biome",
				"oven.bun-vscode",
				"edwinhuish.better-comments-next",
				"aladdin.aladdin-chewan-plugin",
				"patbenatar.advanced-new-file",
				"streetsidesoftware.code-spell-checker",
				"brunnerh.file-properties-viewer",
				"sleistner.vscode-fileutils",
				"TomRijndorp.find-it-faster",
				"waderyan.gitblame",
				"donjayamanne.githistory",
				"eamodio.gitlens",
				"golang.go",
				"otovo-oss.htmx-tags",
				"mongodb.mongodb-vscode",
				"42Crunch.vscode-openapi",
				"Postman.postman-for-vscode",
				"christian-kohler.path-intellisense",
				"JoeBerria.statusbarerror",
				"KalimahApps.tailwind-config-viewer",
				"bradlc.vscode-tailwindcss",
				"alfredbirk.tailwind-documentation",
				"stivo.tailwind-fold",
				"KalimahApps.tailwindcss-kit",
				"a-h.templ",
				"redhat.vscode-yaml"
			]
		}
	},
	"forwardPorts": [
		8000
	]
	// Features to add to the dev container. More info: https://containers.dev/features.
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "go version",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
